{# Currently subnavbar block does not support collapsing #}
{% block navbar %}
    {{ navbar.hasMenu('options') and navbar.getMenu('options') ? knp_menu_render(navbar.getMenu('options')) : '' }}

    {{ navbar.getMenu('menu') ?
        knp_menu_render(navbar.getMenu('menu'), {
            'currentClass': 'active',
            'ancestorClass': 'active',
            'allow_safe_labels': true}) : '' }}
{% endblock navbar %}
